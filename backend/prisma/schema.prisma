enum ThemeEnum {
  LIGHT
  DARK
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// EXAMPLE OF MODEL
model user_data {
  id                            Int @id @default(autoincrement())
  username                      String @unique
  password                      String

  user_profile user_profile?
}

model user_profile {
  id                            Int     @id
  theme                         ThemeEnum  @default(LIGHT)

  user_data user_data @relation(fields: [id], references: [id], onDelete: Cascade) // One-to-One Relationship
}